{
	"name": "magnus",
	"displayName": "Magnus",
	"description": "Magnus remote server query provider.",
	"publisher": "Triumph Tech",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.41.0",
		"azdata": "*"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onConnect:magnus"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "magnus.selectTop1000",
				"title": "Select Top 1000"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "magnus.selectTop1000",
					"when": "false"
				}
			],
			"objectExplorer/item/context": [
				{
					"command": "magnus.selectTop1000",
					"when": "connectionProvider == magnus && nodeType == 3"
				}
			]
		},
		"connectionProvider": {
			"providerId": "magnus",
			"displayName": "Magnus",
			"connectionOptions": [
				{
					"specialValueType": "serverName",
					"isIdentity": true,
					"name": "server",
					"displayName": "Server",
					"groupName": "Source",
					"valueType": "string",
					"defaultValue": null,
					"objectType": null,
					"categoryValues": null,
					"isRequired": true,
					"isArray": false
				},
				{
					"specialValueType": "userName",
					"isIdentity": true,
					"name": "user",
					"displayName": "Username",
					"groupName": "Security",
					"valueType": "string",
					"defaultValue": null,
					"objectType": null,
					"categoryValues": null,
					"isRequired": true,
					"isArray": false
				},
				{
					"specialValueType": "password",
					"isIdentity": true,
					"name": "password",
					"displayName": "Password",
					"groupName": "Security",
					"valueType": "password",
					"defaultValue": null,
					"objectType": null,
					"categoryValues": null,
					"isRequired": true,
					"isArray": false
				},
				{
					"specialValueType": "connectionName",
					"isIdentity": true,
					"name": "connectionName",
					"displayName": "Connection Name",
					"groupName": "Source",
					"valueType": "string",
					"defaultValue": null,
					"objectType": null,
					"categoryValues": null,
					"isRequired": false,
					"isArray": false
				}
			]
		},
		"dashboard": {
			"provider": "magnus",
			"flavors": [
				{
					"flavor": "default",
					"conditions": [],
					"serverProperties": [
						{
							"displayName": "Rock Version",
							"value": "rockVersion"
						},
						{
							"displayName": "OS Version",
							"value": "osVersion"
						},
						{
							"displayName": "SQL Edition",
							"value": "sqlEdition"
						},
						{
							"displayName": "SQL Version",
							"value": "sqlVersion"
						}
					],
					"databaseProperties": [],
					"databasesListProperties": []
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js",
		"proposedapi": "node installTypings.js"
	},
	"devDependencies": {
		"@types/azdata": "*",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "^13.11.0",
		"@types/uuid": "^9.0.1",
		"@types/vscode": "^1.39.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"axios": "^1.3.4",
		"azdata-test": "^1.x",
		"eslint": "^6.8.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.0",
		"typescript": "^4.3.5",
		"uuid": "^9.0.0"
	}
}
